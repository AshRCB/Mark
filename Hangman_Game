import time
name=input("enter your name: ")
print("Hello, " + name, "Time to play hangman!")
time.sleep(1)
print ("Start guessing...")
time.sleep(1)
guesses=''
turns=10
word="python"
while turns>0:
    failed=0
    for char in word:
        if char in guesses:
            print(char)
        else:
            print("_")
            failed+=1
    if failed==0:
        print("won")
        break
    guess=input("Guess the word:")
    guesses+=guess
    if guess not in word:
        turns-=1
        print("wrong")
        print("you have {} more guesses".format(turns))
    if turns==0:
        print("you loose")
